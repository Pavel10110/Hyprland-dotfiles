listview {
  scrollbar: false;  // Explicitly disable scrollbar
  background-color: transparent;
  padding:    15px;
  //margin:     5px;
  border-radius:30px;
  border:0px;
  lines: 6;
  spacing: 5px;
} 

element {

  orientation: horizontal ;
  children: [ element-text ];
  border-radius:20px;
  padding:    5px;
