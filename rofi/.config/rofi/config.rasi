  border-radius: 30px;
  width: 600px;
  border:0px;

}


overlay{}

mainbox {
  //  background-color: transparent;
  background-color: transparent;
  border-radius: 30px;
  children: [inputbar, listview];
}

inputbar {

  //background-color: gray;
  //  background-image: url("/home/archyper/.cache/rofi_wallpaper_small.jpg", width);
  background-image: url("/home/archyper/.cache/rofi_wallpaper_small.jpg", width);
  background-color: rgba(0, 0, 0, 0.6);
  padding:    100px 20px 80px 20px;
  border-radius: 30px 30px 0px 0px;
  children: [entry, mode-switcher];
  spacing: 30px;

}

promt {
}

entry { // input field

  font:   "Hack Nerd Font 14";
  placeholder: " Search";
  vertical-align: 0.5; //make text in the middle of its' window
  blink: false;
  hide-cursor-on-empty: true;
  expand: true;
  background-color: @color2;
  border-radius:30px;
  padding:     12px;
}

mode-switcher{
  spacing: 10px;
  background-color: transparent;

}
button {

  font:   "Hack Nerd Font Mono 20";
  border-radius: 30px;
  padding:     inherit;
  // padding:    8px 12px;
  // min-height: 36px;
  horizontal-align: 0.5;
  vertical-align: 0.5;
  line-height: 1.0;
  background-color: @color2;
}

button.selected {
  background-color: @background;


}




