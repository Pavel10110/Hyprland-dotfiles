configuration {
  sidebar-mode: true;
  modi:   "window,combi,drun,calc";
  combi-modi: "window,drun,calc";
  drun-display-format:      "{name}";  
  display-drun:             "  ";               // DRUN mode prompt
  display-combi:              "  ";               // RUN mode prompt
  display-window:          " 󱂬 "; 
  sidebar-mode:             false;              // Show sidebar with modes
}

